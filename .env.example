# ListPull Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Server Configuration (Required)
# ===========================================
# Generate a secure random string for JWT signing (min 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters-long

# Server port
PORT=3000

# Database path (SQLite)
DATABASE_PATH=./data/listpull.db

# JWT token expiry (e.g., 7d, 24h, 1w)
JWT_EXPIRY=7d

# ===========================================
# Email Configuration (Optional)
# ===========================================
# SMTP settings for sending notifications
# Leave empty to disable email sending

# Gmail example:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=youremail@gmail.com
# SMTP_PASS=your-app-password (generate at myaccount.google.com/apppasswords)

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
FROM_EMAIL=
FROM_NAME=ListPull

# ===========================================
# Store Branding (Frontend)
# ===========================================
VITE_STORE_NAME="Your Store Name"
VITE_STORE_EMAIL=contact@yourstore.com
VITE_STORE_PHONE=(555) 123-4567
VITE_STORE_ADDRESS="123 Main Street, City, State"

# Store config for backend (used in emails)
STORE_NAME="Your Store Name"
STORE_EMAIL=contact@yourstore.com
STORE_PHONE=(555) 123-4567
STORE_ADDRESS="123 Main Street, City, State"

# ===========================================
# Order Configuration
# ===========================================
# Prefix for order numbers (e.g., LP-XXXXXXXX)
VITE_ORDER_PREFIX=LP
ORDER_PREFIX=LP

# Number of days orders are held before being returned to inventory
VITE_ORDER_HOLD_DAYS=7

# ===========================================
# File Upload Limits
# ===========================================
# Maximum file size for decklist uploads in MB
VITE_MAX_FILE_SIZE_MB=1

# Maximum number of cards allowed in a single decklist
VITE_MAX_DECKLIST_CARDS=500

# ===========================================
# API Rate Limiting (milliseconds between requests)
# ===========================================
# Scryfall allows 10 requests/second, so 100ms minimum
VITE_SCRYFALL_RATE_LIMIT_MS=100

# Pokemon TCG proxy - be conservative
VITE_POKEMON_RATE_LIMIT_MS=200

# Debounce delay for autocomplete inputs
VITE_AUTOCOMPLETE_DEBOUNCE_MS=200

# API base URL (leave as /api for same-origin)
VITE_API_URL=/api
